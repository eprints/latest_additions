<div class="dropdown-content">
  <div class="name-list">
    <div class="name-item">
      <div class="name-header" style="text-align: left">
         <epc:foreach expr="creators_name" iterator="name" limit="1">
	 
                  <epc:print expr="$name{given}" /> <epc:print expr="$name{family}" />
                  <!--<button class="expand-btn" onclick="expandNames(this)">Expand</button>-->
	<button class="expandbtn" onclick="expandNames(this)"><img id="expand-icon" src="{$config{rel_path}}/style/images/plus.png"/></button>
	</epc:foreach>
      </div>
      <div class="full-names" style="display:none;">
        <table>
          <epc:foreach expr="creators_name" iterator="name">
            <tr>
              <td style="text-align: left">
                <div>
                  <epc:print expr="$name{given}" /> <epc:print expr="$name{family}" />
                </div>
              </td>
            </tr>
          </epc:foreach>
        </table>
      </div>
    </div>
  </div>
</div>

