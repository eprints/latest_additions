
/* latest and latest tool */

div.ep_latest_tool_list {
    display: grid;
    grid-template-columns: repeat(auto-fill,minmax(250px, 1fr)); 
    gap: 8px;
    max-width: 100%;
}

.ep_citation_details {
	width: 300px;
    height: 80px;
    overflow: initial; 
    white-space: normal;
    text-overflow: ellipsis; 
}

.truncated::after {
    content: '...';
    display: inline-block;
}

div.ep_link_title a {
    text-decoration: none;
    color: #666666;
    font-family: "Helvetica", sans-serif;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
 }

div.dropdown-content {
    display: block;
    position: relative;
    z-index: 2;
}

.full-names {
    background-color: white;
    padding-left: 5px;
    border: 1px solid rgba(204, 204, 204, 0.8);
    margin-top: -4px;
    width: fit-content; 
}

div.dropdown-content-table table{
    color: #333333; 
    display: block; 
    max-height: 1.4em; 
    text-overflow: ellipsis;
}

div.dropdown-content-table  table:hover {
    white-space: normal; 
    max-height: none; 
}

@media (max-width: 1288px) {
    div.ep_latest_tool_list {
        grid-template-columns: repeat(auto-fill,minmax(250px, 1fr)); 
    }
    .ep_latest_tool_result_test {
       width: 250px;/
    }
    .ep_link_title a {
	    font-size: 14px;
        width: 250px; 
	    display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }
    .dropdown-content-table table {
	    display: block;
	    font-size: 14px;
        width: 250px;
    }
    .name-header {
        display: block;
        font-size: 14px;
        width: 250px; 
    }
    .full-names {
        font-size: 14px; 
    }
}

@media (max-width: 1067px) {
    div.ep_latest_tool_list {
        grid-template-columns: repeat(auto-fill,minmax(200px, 1fr)); 
    }
    .ep_latest_tool_result_test {
       width: 200px; 
    }
    .ep_link_title a {
        font-size: 12px;
        width: 200px; 
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }
    .dropdown-content-table table {
        display: block;
        font-size: 14px;
        width: 200px; 
    }
    .name-header {
        display: block;
        font-size: 12px;
        width: 250px; 
    }     
    .full-names table {
        font-size: 12px; 
    }
}

.expandbtn {
    background: none;
    border: none;
    cursor: pointer;
    outline: none;
    text-align: left; 
}

#expand-icon {
    width: 100%; 
    height: auto; 
}

.image-container {
    display: inline-block; 
    position: relative; 
}

.image-container::before {
    content: ""; 
    position: absolute; 
    top: 0;
    left: 0;
    width: 100%; 
    height: 100%;
    background-image: url('{$config.rel_path}/javascript/images/minus.png'); 
    background-size: cover;
    background-repeat: no-repeat;
    opacity: 0.5; 
    z-index: -1; 
}

