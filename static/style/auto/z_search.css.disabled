/* EPrints 3 search form style */

.ep_search_result_docs 
{
    width:300px;
    height:180px;
    overflow: hidden;
    border: 1px solid #ccc;
    border-radius: 10px 10px 0 0;
    margin-bottom: 5px;
}

.ep_search_result_docs img 
{
    width:100%;
    height:100%
    object-fit: cover; 
}

@media (max-width: 1276px) {
    .ep_search_result_docs {
        width:250px;
        height:150px;
        overflow: hidden;
        border: 1px solid grey;
        }

    .ep_search_result_docs img {
        object-fit: cover;
    }
}

@media (max-width: 1067px) {
    .ep_search_result_docs {
        width:200px;
        height:100px;
        overflow: hidden;
        border: 1px solid grey;
        }

    .ep_search_result_docs img {
        object-fit: cover;
    }
}

@media (max-width: 410px) {
    .ep_search_result_docs {
        width:300px;
        height:180px;
        overflow: hidden;
        border: 1px solid grey;
        }

    .ep_search_result_docs img {
        object-fit: cover;
    }
}

.ep_citation_details {
    width: 320px;
    height: 180px;
    overflow: hidden; 
    white-space: normal;
    text-overflow: ellipsis; 
}



